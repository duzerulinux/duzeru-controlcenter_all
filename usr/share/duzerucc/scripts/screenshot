#!/bin/bash

function uploadImage {
url=$(curl -s -F "image=@$1" -F "key=486690f872c678126a2c09a9e196ce1b" https://imgur.com/api/upload.xml | grep -E -o "<original_image>(.)*</original_image>" | grep -E -o "http://i.imgur.com/[^<]*")
if [ "$?" != "0" ]; then
    zenity --error --text="Could not send screenshot"
    exit
fi 
echo 100  #This here is to kill the progress bar
 /bin/sh -c "exo-open '$url'"
}

if zenity --question --text="This will send  a screenshot to imgur.com online image hosting service.\nMake sure the DuZeru Control Center window is in focus.\n\nProceed?"; then
	uploadImage "$HOME/duzeruccshot.png" | zenity --progress --pulsate --auto-close --auto-kill --title="Uploading Image" --text="Sending image to imgur.com\n\nPlease wait..." 
	rm "$HOME/duzeruccshot.png"
fi
