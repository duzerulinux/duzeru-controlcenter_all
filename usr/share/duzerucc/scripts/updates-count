import apt

cache = apt.Cache()
cache.close()
cache.open()
upgrades = 0
cache.upgrade(dist_upgrade=False)
changes = cache.get_changes()
if changes:
    counter = [change.name for change in changes]
    upgrades = (len(counter))
print(upgrades)
